<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_advert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/advertName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_advert" />

    <TextView
        android:id="@+id/advertdistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="A **** km"
        app:layout_constraintTop_toBottomOf="@id/advertName"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/adverttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Disponible entre 12:00 et 15:00 heure"
        app:layout_constraintTop_toBottomOf="@id/advertName"
        app:layout_constraintRight_toRightOf="parent"/>


    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#9e9e9e"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/advertName"
        app:layout_constraintTop_toBottomOf="@id/img_advert" />

</android.support.constraint.ConstraintLayout>
